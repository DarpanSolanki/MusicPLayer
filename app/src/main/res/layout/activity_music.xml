<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@color/background_floating_material_dark"
    android:backgroundTint="@color/background_floating_material_dark">

    <ImageView
        android:id="@+id/display_image"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:maxHeight="350dp"
        android:maxWidth="350dp"
        android:src="@drawable/thumb" />


    <TextView
        android:id="@+id/main_artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="ArtistName"
        android:textColor="@android:color/white"
        android:fontFamily="@string/abc_activitychooserview_choose_application"
        android:layout_below="@+id/main_songName"
        android:layout_alignLeft="@+id/main_songName"
        android:layout_alignStart="@+id/main_songName" />

    <TextView
        android:id="@+id/main_songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="SongName"
        android:textColor="@android:color/white"
        android:fontFamily="@string/abc_activitychooserview_choose_application"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/display_image"
        android:layout_alignRight="@+id/activity_main_rewind"
        android:layout_alignEnd="@+id/activity_main_rewind" />


        <ImageButton
            android:id="@+id/activity_main_play"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:paddingTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/play"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/activity_main_rewind"
            android:layout_toEndOf="@+id/activity_main_rewind" />


        <ImageButton
            android:id="@+id/activity_main_pause"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:paddingTop="8dp"
            android:scaleType="fitXY"

            android:src="@drawable/pause"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/activity_main_fastforward"
            android:layout_toStartOf="@+id/activity_main_fastforward" />

        <ImageButton
            android:id="@+id/activity_main_fastforward"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/forward"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/activity_main_rewind"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:paddingRight="8dp"
            android:paddingTop="8dp"

            android:scaleType="fitXY"

            android:src="@drawable/rewind"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <SeekBar
            android:id="@+id/activity_main_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:layout_above="@+id/activity_main_play"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



</RelativeLayout>




